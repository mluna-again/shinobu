(defpoll battery
  :interval "1s"
  `~/.local/scripts/battery_no_icon.sh`)

(defwidget battery []
  (box
    :class "ram"
    :space-evenly false
    :orientation "v"
    (box
      :halign "center"
      (box :class "label" 
           :valign "center" "ï•¸ ")
      (box :class "num" 
           :valign "center" "${battery}% "))
    (progress
      :class "progress"
      :width "100px"
      :valign "center"
      :halign "start"
      :value "${battery}")))
