#! /usr/bin/env bash

workspace=$(cat - <<EOF | fzf --header="Select workspace"
mluna@desktop
mluna@dh
EOF
)

common_ports="3000 4000 9000 4008 4009 4010 4011 5173"
ports=$(sed 's/ /\n/g' <<< "$common_ports" | awk '{ printf " -L %s:localhost:%s", $1, $1 }')

[ -z "$workspace" ] && exit 1

args="$ports $workspace.local"

# shellcheck disable=SC2086
/usr/bin/env ssh $args
