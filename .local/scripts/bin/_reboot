#! /usr/bin/env bash

if ! uname | grep -iq linux; then
  printf "This script only works on linux.\n"
  exit 1
fi

boot_entry=$(
  awk -F "[\"']" '/^menuentry/ { print $2 }' /boot/grub/grub.cfg | \
  awk '{ print NR, $0 }' | \
  fzf --header="Select boot entry" | \
  awk '{ print $1 }'
  )

[ -z "$boot_entry" ] && exit 1

sudo grub-reboot "$boot_entry"
sudo shutdown -r now
